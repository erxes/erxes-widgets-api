{
  "name": "erxes-widgets-api",
  "version": "0.9.11",
  "description": "GraphQL API for erxes widgets",
  "homepage": "https://erxes.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/erxes/erxes-widgets-api"
  },
  "bugs": "https://github.com/erxes/erxes-widgets-api/issues",
  "keywords": [
    "node",
    "express",
    "graphql",
    "apollo"
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node dist",
    "dev": "NODE_ENV=development nodemon -e ts src --exec ts-node",
    "test": "NODE_ENV=test jest --runInBand",
    "build": "tsc -p tsconfig.prod.json",
    "lint": "tslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "body-parser": "^1.17.1",
    "cors": "^2.8.1",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "graphql": "^0.10.1",
    "graphql-server-core": "^0.8.2",
    "graphql-server-express": "^0.8.2",
    "graphql-server-module-graphiql": "^0.8.2",
    "graphql-tools": "^1.0.0",
    "meteor-random": "0.0.3",
    "mongoose": "^4.9.2",
    "nodemailer": "^4.0.1",
    "q": "^1.5.1",
    "requestify": "^0.2.5",
    "underscore": "^1.8.3",
    "validator": "^7.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.0",
    "@types/mongodb": "^3.1.2",
    "@types/mongoose": "^5.2.1",
    "@types/q": "^1.5.0",
    "jest": "22.0.4",
    "prettier": "^1.13.7",
    "ts-jest": "22.0.4",
    "faker": "^4.1.0",
    "husky": "^0.13.4",
    "lint-staged": "^3.6.0",
    "nodemon": "^1.11.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.1.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.9.2"
  }
}
