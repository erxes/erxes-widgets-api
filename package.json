{
  "name": "erxes-api",
  "version": "0.9.6",
  "description": "GraphQL API for erxes widgets",
  "homepage": "https://erxes.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/erxes/erxes-api"
  },
  "bugs": "https://github.com/erxes/erxes-api/issues",
  "keywords": [
    "node",
    "express",
    "graphql",
    "apollo"
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node dist",
    "dev": "NODE_ENV=development nodemon -e ts src --exec ts-node",
    "test": "NODE_ENV=test jest --runInBand",
    "build": "babel src --out-dir dist --ignore __tests__,tests --copy-files",
    "lint": "eslint src",
    "format": "prettier --write --print-width 100 --single-quote --trailing-comma all 'src/**/*.js'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --print-width 100 --single-quote --trailing-comma all",
      "git add"
    ]
  },
  "dependencies": {
    "@types/mongoose": "^5.2.1",
    "body-parser": "^1.17.1",
    "cors": "^2.8.1",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "graphql": "^0.10.1",
    "graphql-server-core": "^0.8.2",
    "graphql-server-express": "^0.8.2",
    "graphql-server-module-graphiql": "^0.8.2",
    "graphql-tools": "^1.0.0",
    "meteor-random": "0.0.3",
    "mongoose": "^4.9.2",
    "nodemailer": "^4.0.1",
    "q": "^1.5.1",
    "requestify": "^0.2.5",
    "underscore": "^1.8.3",
    "validator": "^7.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "@types/mongodb": "^3.1.2",
    "faker": "^4.1.0",
    "husky": "^0.13.4",
    "jest": "^20.0.4",
    "lint-staged": "^3.6.0",
    "nodemon": "^1.11.0",
    "prettier": "^1.4.4",
    "ts-jest": "^23.0.1",
    "ts-node": "^7.0.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^2.9.2"
  }
}
